<p id="notice"><%= notice %></p>

<h2><em><%= @album.title %></em> by <%= @album.band.name %></h2>

<p>This <%= @album.album_type %> was released in <%= @album.year %></p>

<h3>Tracklist</h3>

<ul>
  <% @album.tracks.each do |track| %>
  <li><%= "#{track.track_number} - " if track.track_number %>
    <%= link_to track.title, track %>
    <%= ", #{track.length}" if track.length  %>
    <%= " (bonus track)" if track.bonus == true  %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a track', new_album_track_url(@album) %>
<br>
<%= button_to 'Delete album', { :action => "destroy", :id => @album.id },
          :confirm => "Are you sure?", :method => :delete %>

<br>
<%= link_to 'Edit album informations', edit_album_url(@album) %>
<br>
<%= link_to 'Back to band page', band_url(@band) %>
